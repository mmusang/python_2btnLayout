#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	AnotherScreen:
		
		


<MainScreen>:
    width:10.0   
    id:main1
	name:'main1'
    BoxLayout:
        pos:root.x,root.top-self.height
	    size_hint_y: 0.1
        size_hint_x: 0.3
        spacing: 10.0
        width: 100.0
        orientation: 'horizontal'
        Button:
	        text:'Setting'
            color: 1,0,0,1
			on_press:root.manager.current = 'setting1'
        Button:
            text: 'Btn1'
            color: 0,1,0,1
	BoxLayout:
		Label:
			text:'Main Setting Page'
			color:1,0,1,1
			canvas.before:
				Color:
					rgba: 0, 0, 0, 1	

<AnotherScreen>:
    width:10.0   
    id:setting1
	name:'setting1'
	Label:
		text:'Main Setting Page'
		color:1,0,1,1
		canvas.before:
			Color:
                rgba: 0, 0, 0, 1
    BoxLayout:
        pos:root.x,root.top-self.height
	    size_hint_y: 0.1
        size_hint_x: 0.3
        spacing: 10.0
        width: 100.0
        orientation: 'horizontal'
        Button:
	        text:'Go Home'
            color: 1,0,0,1
			on_press: root.manager.current = 'main1'
        Button:
            text: 'Exit'
            color: 0,1,0,1

	BoxLayout